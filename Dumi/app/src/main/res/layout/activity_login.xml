<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <RelativeLayout
        android:background="@drawable/demo_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textAllCaps="false"
            android:id="@+id/btnRegister"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="Register"
            android:textSize="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_shadow"/>

        <ImageView
            android:backgroundTint="@android:color/white"
            android:id="@+id/img"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="Register"
            android:textSize="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_shadow"/>

        <Button
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/img"
            android:id="@+id/btnLogin"
            android:padding="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_shadow"/>


        <LinearLayout
            android:id="@+id/lnrEdt"
            android:gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNIK"
                android:textSize="15dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/NIK"
                android:alpha="0.8"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_edittext_shadow"/>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/edtPassword"
                android:textSize="15dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/password"
                android:alpha="0.8"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_edittext_shadow"/>

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_password_hint"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"/>
        </LinearLayout>

        <ImageView
            android:layout_above="@+id/lnrEdt"
            android:id="@+id/imgLogo"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_alignParentLeft="true"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"/>

    </RelativeLayout>

</LinearLayout>
</layout>